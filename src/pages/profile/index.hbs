title: Profile Page
---
{{#extend "profile"}}
    {{#content "main"}}
        <div class="back-block absolute">
        <svg
                class="back-block__arrow"
                width="24px"
                height="24px"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
        >
            <path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm5 11h-5v4l-5-5 5-5v4h5v2z"/>
        </svg>
        </div>
        <div class="container">
            {{> 'modules/profile/components/avatar' }}
            <div class="profile-name">
                Иван
            </div>
            <div class="info">
                {{>'modules/profile/components/info' }}
                {{> 'modules/profile/components/action' }}
            </div>
        </div>
    {{/content}}
{{/extend}}
